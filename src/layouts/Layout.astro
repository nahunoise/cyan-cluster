---
import '../styles/global.css';

// Puedes pasar estas variables desde cada página si quieres que cambien
const { 
  title = "The Creation Society", 
  description = "De idea a MVP con IA, No-Code y Low-Code. Una membresía para founders." 
} = Astro.props;

// Nota: Asegúrate de tener una imagen llamada og-image.jpg en tu carpeta public/
const ogImageURL = "/og-image.jpg"; 
---

<!doctype html>
<html lang="es">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

        <title>{title}</title>
        <meta name="description" content={description} />
        <meta property="og:type" content="website" />
        <meta property="og:title" content={title} />
        <meta property="og:description" content={description} />
        <meta property="og:image" content={ogImageURL} />
        <meta property="twitter:card" content="summary_large_image" />
        <meta property="twitter:image" content={ogImageURL} />

        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,500;0,600;1,500&family=Inter:wght@400;600&display=swap" rel="stylesheet">
    </head>
    <body class="bg-creation-dark text-creation-cream antialiased">
        <slot />
    </body>
</html>

<style is:global>
    html,
    body {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        /* Suaviza el renderizado de fuentes */
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
    }
</style>