---
import Layout from '../layouts/Layout.astro';
---
<Layout title="Acceso | The Creation Society">
  <main class="max-w-md mx-auto pt-32 px-6 text-center">
    <h1 class="text-4xl font-serif italic text-creation-gold mb-4">Acceso Creadores</h1>
    
    <form id="login-form" class="space-y-4 text-left">
      <div>
        <label class="text-[10px] uppercase tracking-widest text-creation-gold/60">Correo electrónico</label>
        <input type="email" id="email" required class="w-full bg-white/5 border border-white/10 p-4 rounded-2xl text-white outline-none focus:border-creation-gold mt-1" />
      </div>
      <div>
        <label class="text-[10px] uppercase tracking-widest text-creation-gold/60">Contraseña</label>
        <input type="password" id="password" required class="w-full bg-white/5 border border-white/10 p-4 rounded-2xl text-white outline-none focus:border-creation-gold mt-1" />
      </div>
      
      <button type="submit" id="btn" class="w-full bg-creation-gold text-creation-dark py-4 rounded-2xl font-bold hover:brightness-110 transition-all">
        Entrar ahora
      </button>

      <div class="text-center mt-4">
        <button type="button" id="forgot-password" class="text-[10px] uppercase tracking-widest text-white/40 hover:text-creation-gold transition-colors">
          ¿Olvidaste tu contraseña?
        </button>
      </div>

      <div id="msg" class="text-xs pt-4 text-center min-h-[30px]"></div>
    </form>
  </main>
</Layout>

<script>
  import { supabase } from '../lib/supabase';

  const form = document.getElementById('login-form');
  const msg = document.getElementById('msg');
  const forgotBtn = document.getElementById('forgot-password');

  // --- Lógica de Login ---
  form?.addEventListener('submit', async (e) => {
    e.preventDefault();
    const email = (document.getElementById('email') as HTMLInputElement).value.trim();
    const password = (document.getElementById('password') as HTMLInputElement).value;

    if (msg) msg.textContent = "Verificando...";

    const { error } = await supabase.auth.signInWithPassword({ email, password });

    if (error) {
      if (msg) {
        msg.textContent = `Error: ${error.message}`;
        msg.style.color = "#f87171";
      }
    } else {
      window.location.assign('/dashboard');
    }
  });

  // --- Lógica de Recuperación ---
  forgotBtn?.addEventListener('click', async () => {
    const email = (document.getElementById('email') as HTMLInputElement).value.trim();

    if (!email) {
      if (msg) {
        msg.textContent = "Por favor, escribe tu correo primero.";
        msg.style.color = "#f87171";
      }
      return;
    }

    if (msg) msg.textContent = "Enviando correo de recuperación...";

    const { error } = await supabase.auth.resetPasswordForEmail(email, {
      // Esta URL debe ser donde el usuario cambiará su clave (la crearemos ahora)
      redirectTo: `${window.location.origin}/reset-password`,
    });

    if (error) {
      if (msg) {
        msg.textContent = `Error: ${error.message}`;
        msg.style.color = "#f87171";
      }
    } else {
      if (msg) {
        msg.textContent = "¡Listo! Revisa tu bandeja de entrada.";
        msg.style.color = "#D4AF37";
      }
    }
  });
</script>