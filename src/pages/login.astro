---
import Layout from '../layouts/Layout.astro';
---
<Layout title="Acceso | The Creation Society">
  <main class="max-w-md mx-auto pt-32 px-6 text-center">
    <h1 class="text-4xl font-serif italic text-[#D4AF37] mb-4">Acceso Creadores</h1>
    <form id="login-form" class="space-y-4">
      <input type="email" id="email" required placeholder="tu@email.com" class="w-full bg-white/5 border border-white/10 p-4 rounded-2xl text-white outline-none focus:border-[#D4AF37]" />
      <button type="submit" class="w-full bg-[#D4AF37] text-black py-4 rounded-2xl font-bold hover:brightness-110 transition-all">
        Entrar al Dashboard
      </button>
    </form>
  </main>
</Layout>

<script>
  const form = document.getElementById('login-form');

  form?.addEventListener('submit', (e) => {
    e.preventDefault();
    console.log("Bot√≥n pulsado, guardando acceso...");
    localStorage.setItem('session_bypass', 'true');
    window.location.href = '/dashboard';
  });
</script>